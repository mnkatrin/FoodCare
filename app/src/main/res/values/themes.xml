<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.FoodCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#2DC0FF</item>
        <item name="colorPrimaryVariant">#1E90FF</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#A2E0FA</item>
        <item name="colorSecondaryVariant">#87CEEB</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Full screen settings -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowBackground">#383737</item>

        <!-- Edge-to-edge display -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Disable action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FoodCare" parent="Base.Theme.FoodCare" />
</resources>