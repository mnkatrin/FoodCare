<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6FDFF"
    android:paddingTop="8dp"
    tools:context=".ui.history.HistoryFragment">

    <!-- Food Care заголовок -->
    <LinearLayout
        android:id="@+id/foodCareLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Food"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Care"
            android:textColor="#2DC0FF"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Кнопка назад -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:background="@android:color/white"
        android:padding="8dp"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/frame_47422"
        android:contentDescription="@string/back" />

    <!-- Заголовок "История" -->
    <TextView
        android:id="@+id/historyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/mulish_bold"
        android:text="История"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Табы: Все / Использовано / Выброшено -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/historyTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/historyTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:singleSelection="true">

        <!-- Вкладка ВСЕ -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/allTabButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Все"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2DC0FF"
            app:cornerRadius="20dp"
            app:checkedIcon="@null" />

        <!-- Вкладка ИСПОЛЬЗОВАНО -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/usedTabButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Использовано"
            android:textSize="14sp"
            android:textColor="#2DC0FF"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="20dp"
            app:checkedIcon="@null" />

        <!-- Вкладка ВЫБРОШЕНО -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/discardedTabButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="Выброшено"
            android:textSize="14sp"
            android:textColor="#2DC0FF"
            android:backgroundTint="#FFFFFF"
            app:cornerRadius="20dp"
            app:checkedIcon="@null" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Линия под табами -->
    <View
        android:id="@+id/tabsBottomLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#D7E7EA"
        app:layout_constraintTop_toBottomOf="@id/historyTabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Строка Фильтры / Количество -->
    <LinearLayout
        android:id="@+id/filtersRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tabsBottomLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Кнопка Фильтры -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/filtersButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:backgroundTint="#FFFFFF"
            app:strokeColor="#2DC0FF"
            app:strokeWidth="1dp"
            app:cornerRadius="18dp"
            android:text="Фильтры"
            android:textColor="#2DC0FF"
            android:textSize="14sp"
            android:icon="@drawable/icon2"
            android:iconTint="#2DC0FF"
            android:iconPadding="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Количество -->
        <TextView
            android:id="@+id/countLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество"
            android:textColor="#555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/countValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="28"
            android:textColor="#2DC0FF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Поиск по истории (по названию продукта) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filtersRow">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Поиск по названию"
            android:padding="10dp"
            android:textSize="14sp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Контейнер списка истории -->
    <LinearLayout
        android:id="@+id/historyListContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="#F3FBFB"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/searchInputLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/historyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false"
            tools:listitem="@layout/item_history_event" />

        <!-- Пустое состояние -->
        <TextView
            android:id="@+id/emptyHistoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="История пуста"
            android:textColor="#999999"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <!-- НИЖНЯЯ ПАНЕЛЬ КАК В MAIN ACTIVITY -->
    <FrameLayout
        android:id="@+id/bottomFrame"
        android:layout_width="0dp"
        android:layout_height="193dp"
        android:alpha="0.9"
        android:background="@drawable/rectangle_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="397dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/frame_180" />

        <!-- Кнопка профиля -->
        <Button
            android:id="@+id/profileButton"
            android:layout_width="55dp"
            android:layout_height="68dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <!-- Центральная кнопка -->
        <Button
            android:id="@+id/Button4"
            android:layout_width="55dp"
            android:layout_height="68dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/frame_47417__1_" />

        <Button
            android:id="@+id/Button3"
            android:layout_width="55dp"
            android:layout_height="68dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="270dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/Button5"
            android:layout_width="55dp"
            android:layout_height="68dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="350dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
