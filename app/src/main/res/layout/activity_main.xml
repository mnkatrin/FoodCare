<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6FDFF"
    android:paddingTop="5dp">

    <!-- Food Care заголовок -->
    <LinearLayout
        android:id="@+id/foodCareLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Food"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Care"
            android:textColor="#2DC0FF"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- Текст Категория -->
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_bold"
        android:text="Категория"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodCareLayout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Контейнер для кнопок -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Первая кнопка - Рецепты -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecipes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#B7D4FF"
                android:fontFamily="@font/mulish_bold"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="15dp"
                android:text="Рецепты"
                android:textColor="#000"
                android:textSize="20sp"
                app:cornerRadius="16dp" />

            <ImageView
                android:id="@+id/recipesImage"
                android:layout_width="120dp"
                android:layout_height="116dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/frame_47449" />

        </FrameLayout>

        <!-- Вторая кнопка - Продукты -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#BFFBC8"
                android:fontFamily="@font/mulish_bold"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="15dp"
                android:text="Продукты"
                android:textColor="#000"
                android:textSize="20sp"
                app:cornerRadius="16dp" />

            <ImageView
                android:id="@+id/productsImage"
                android:layout_width="120dp"
                android:layout_height="116dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/group_164" />

        </FrameLayout>

    </LinearLayout>

    <!-- FrameLayout как НАЛОЖЕНИЕ -->
    <FrameLayout
        android:id="@+id/bottomFrame"
        android:layout_width="410dp"
        android:layout_height="193dp"
        android:alpha="0.9"
        android:background="@drawable/rectangle_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- ИСПРАВЛЕННАЯ кнопка профиля - теперь это Button -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="375dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/frame_180" />

        <!-- Кнопка профиля - ПРОЗРАЧНАЯ -->
        <Button
            android:id="@+id/profileButton"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="Выход"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>