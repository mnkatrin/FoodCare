<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Фотография продукта слева -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="#F8F9FA"
            android:src="@drawable/ic_food_placeholder" />

        <!-- Категория продукта -->
        <TextView
            android:id="@+id/productCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/productImage"
            android:layout_alignTop="@+id/productImage"
            android:layout_marginStart="12dp"
            android:text="Напитки"
            android:textSize="12sp"
            android:textColor="#718096"
            android:textStyle="bold" />

        <!-- Название продукта -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/productImage"
            android:layout_below="@+id/productCategory"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Апельсиновый сок"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2D3748" />

        <!-- Срок годности (сверху справа) - УВЕЛИЧЕННАЯ ПЛАШКА -->
        <TextView
            android:id="@+id/productExpiration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/productImage"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="4dp"
            android:text="Осталось: 2 дня"
            android:textSize="11sp"
            android:textColor="#E53E3E"
            android:textStyle="bold"
            android:background="@drawable/expiration_background"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp" />

        <!-- Счетчик количества (справа внизу) -->
        <LinearLayout
            android:id="@+id/counterLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/productImage"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:background="@drawable/counter_background"
            android:paddingVertical="4dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true">

            <!-- Кнопка минус -->
            <TextView
                android:id="@+id/btnDecrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:paddingHorizontal="3dp" />

            <!-- Количество -->
            <TextView
                android:id="@+id/productQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="13sp"
                android:textColor="#4B5563"
                android:textStyle="bold"
                android:paddingHorizontal="6dp" />

            <!-- Кнопка плюс -->
            <TextView
                android:id="@+id/btnIncrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:textStyle="bold"
                android:paddingHorizontal="3dp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>