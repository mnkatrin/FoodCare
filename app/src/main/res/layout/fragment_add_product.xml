<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77B9BC"
    android:backgroundTint="#E6FDFF"
    android:paddingTop="5dp">

    <!-- Заголовок Food Care -->
    <LinearLayout
        android:id="@+id/foodCareLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Food"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Care"
            android:textColor="#2DC0FF"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- Кнопка назад -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#00B61515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/frame_47422" />

    <!-- Кнопка добавить продукт -->

    <!-- Карточка с полем поиска -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addProductButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/mulish_bold"
        android:text="Добавить продукт"
        android:textColor="#000000"
        android:textSize="20sp"
        app:icon="@drawable/add_sharp"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        app:iconTint="#2DC0FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodCareLayout" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/searchCard"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addProductButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/search_outline" />

            <!-- AutoCompleteTextView для поиска продуктов -->
            <AutoCompleteTextView
                android:id="@+id/productSearchAutoComplete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Поиск продуктов..."
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:padding="0dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:completionThreshold="1" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Надпись недавно добавленные -->
    <TextView
        android:id="@+id/recentlyAddedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/mulish_bold"
        android:text="Недавно добавленные"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchCard" />

    <!-- RecyclerView для "Недавно добавленных" продуктов -->

    <!-- TextView для отображения сообщения "Нет недавно добавленных продуктов" -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recentProductsRecyclerView"
        android:layout_width="404dp"
        android:layout_height="622dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomFrame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recentlyAddedText"
        app:layout_constraintVertical_bias="0.134" />

    <TextView
        android:id="@+id/noRecentProductsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Нет недавно добавленных продуктов"
        android:textSize="16sp"
        android:textColor="#888888"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/recentlyAddedText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Нижняя панель с фоном -->
    <FrameLayout
        android:id="@+id/bottomFrame"
        android:layout_width="0dp"
        android:layout_height="193dp"
        android:alpha="0.9"
        android:background="@drawable/rectangle_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="397dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/frame_180" />

        <!-- Кнопки нижней панели -->
        <Button
            android:id="@+id/profileButton"
            android:layout_width="55dp"
            android:layout_height="68dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/addPhotoButton"
            android:layout_width="83dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/frame_47417__1_" />

    </FrameLayout>

    <!-- Затемнение фона для профиля -->
    <View
        android:id="@+id/backgroundDim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
