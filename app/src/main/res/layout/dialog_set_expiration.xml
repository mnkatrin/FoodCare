<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mulish_bold"
        android:text="Установить срок годности"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_marginBottom="20dp" />

    <!-- Дата окончания срока годности -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата окончания срока годности:"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- Поле выбора даты -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/expirationDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Выберите дату"
            android:focusable="false"
            android:clickable="true" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Количество -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество:"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- Spinner для выбора единиц измерения -->
    <Spinner
        android:id="@+id/unitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent" />

    <!-- Поле количества с кнопками + и - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Кнопка уменьшения -->
        <ImageButton
            android:id="@+id/decreaseButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_remove"
            android:tint="#FFFFFF" />

        <!-- Поле количества -->
        <EditText
            android:id="@+id/quantityEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle_3"
            android:gravity="center"
            android:hint="1"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Кнопка увеличения -->
        <ImageButton
            android:id="@+id/increaseButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background"
            android:src="@drawable/add_sharp"
            android:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Кнопка отмены -->
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#040000"
            android:backgroundTint="#E22020"
            android:padding="12dp"
            android:text="Отмена"
            android:textSize="14sp" />

        <!-- Кнопка добавления -->
        <Button
            android:id="@+id/addButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="#2DC0FF"
            android:text="Добавить"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>