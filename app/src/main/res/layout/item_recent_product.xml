<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Фотография продукта слева -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:background="#F8F9FA"
            android:contentDescription="Фото продукта"
            android:src="@drawable/ic_default_food" />

        <!-- Контейнер для текста (категории и названия) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_weight="1">

            <!-- Категория продукта -->
            <TextView
                android:id="@+id/productCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Категория"
                android:textSize="12sp"
                android:textColor="#718096"
                android:textStyle="bold" />

            <!-- Название продукта -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название продукта"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:maxLines="2"
            android:ellipsize="end" />

        </LinearLayout>

        <!-- Кнопка добавления -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="Добавить продукт"
            android:src="@drawable/ic_add"
            app:backgroundTint="#2DC0FF"
            app:fabSize="normal"
            app:tint="@android:color/white"
            app:shapeAppearanceOverlay="@style/SquareButton"
            app:elevation="4dp"
            app:useCompatPadding="false"
            android:layout_centerInParent="true"
            />




    </LinearLayout>
</androidx.cardview.widget.CardView>
